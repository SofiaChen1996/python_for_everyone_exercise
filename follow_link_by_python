import urllib.request, urllib.parse, urllib.error
from bs4 import BeautifulSoup
import ssl, sys
import re
# Ignore SSL certificate errors
ctx = ssl.create_default_context()
ctx.check_hostname = False
ctx.verify_mode = ssl.CERT_NONE

url = input('Enter url: ')
times = input('Enter the proceeding times: ')
position = input('Enter the position: ')

html = urllib.request.urlopen(url, context=ctx).read()
soup = BeautifulSoup(html, 'html.parser')

# Retrieve all of the anchor tags
print("Retrieving",url)
tags = soup('a')
for i in range(int(times)):
    links =[]
    for tag in tags:
        links.append(str(tag.get('href', None)))
    html = urllib.request.urlopen(links[int(position)-1], context=ctx).read()
    soup = BeautifulSoup(html, 'html.parser')
    print("Retrieving",links[int(position)-1])
    tags = soup('a')
name1=re.findall('.known_by_(.+).html',links[int(position)-1])
print('The retriving name is:',name1)